# Build the final container. And install
FROM montferret/chromium:86.0.4240.0 as runner

RUN apt-get update && apt-get install -y dumb-init ca-certificates

WORKDIR /root

# Add worker binary
COPY worker /bin/worker
EXPOSE 8080

ENTRYPOINT ["dumb-init", "--"]
CMD ["/bin/sh", "-c", "./entrypoint.sh & ./worker"]
